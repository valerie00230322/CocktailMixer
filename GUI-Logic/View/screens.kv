#:kivy 2.3.0
#:import MDTextField kivymd.uix.textfield.MDTextField
#:import MDRaisedButton kivymd.uix.button.MDRaisedButton
#:import MDRectangleFlatButton kivymd.uix.button.MDRectangleFlatButton
#:import MDLabel kivymd.uix.label.MDLabel
#:import MDBoxLayout kivymd.uix.boxlayout.MDBoxLayout
#:import MDScrollView kivymd.uix.scrollview.MDScrollView

<WelcomeScreen>:
    MDBoxLayout:
        orientation: "vertical"
        spacing: "20dp"
        padding: "40dp"
        md_bg_color: 0.05, 0.07, 0.12, 1

        MDLabel:
            text: "üçπ Willkommen zu MixMate"
            halign: "center"
            font_style: "H4"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1

        MDRaisedButton:
            text: "Rezepte"
            pos_hint: {"center_x": 0.5}
            on_release: app.controller.go_to_recipes()

        MDRaisedButton:
            text: "Manueller Mix"
            pos_hint: {"center_x": 0.5}
            on_release: app.controller.on_manual_pressed()

        MDRaisedButton:
            text: "Kalibrierung"
            pos_hint: {"center_x": 0.5}
            on_release: app.controller.on_calibration_pressed()

        MDRaisedButton:
            text: "Admin Login"
            pos_hint: {"center_x": 0.5}
            on_release: app.controller.go_to_login()


<LoginScreen>:
    MDBoxLayout:
        orientation: "vertical"
        spacing: "20dp"
        padding: "40dp"
        md_bg_color: 0.05, 0.07, 0.12, 1

        MDLabel:
            text: "Admin Login"
            halign: "center"
            font_style: "H4"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1

        MDTextField:
            id: username
            hint_text: "Benutzername"
            mode: "rectangle"

        MDTextField:
            id: password
            hint_text: "Passwort"
            password: True
            mode: "rectangle"

        MDRaisedButton:
            text: "Login"
            pos_hint: {"center_x": 0.5}
            on_release: app.controller.check_login(username.text, password.text)

        MDRectangleFlatButton:
            text: "Zur√ºck"
            pos_hint: {"center_x": 0.5}
            on_release: app.controller.go_to_welcome()


<AdminScreen>:
    MDBoxLayout:
        orientation: "vertical"
        spacing: "20dp"
        padding: "40dp"
        md_bg_color: 0.05, 0.07, 0.12, 1

        MDLabel:
            text: "Admin Dashboard"
            halign: "center"
            font_style: "H4"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1

        MDRaisedButton:
            text: "F√ºllst√§nde pr√ºfen"
            pos_hint: {"center_x": 0.5}
            on_release: app.controller.on_levels_pressed()

        MDRaisedButton:
            text: "Reinigung starten"
            pos_hint: {"center_x": 0.5}
            on_release: app.controller.on_clean_pressed()

        MDRaisedButton:
            text: "Logs ansehen"
            pos_hint: {"center_x": 0.5}
            on_release: app.controller.on_logs_pressed()

        MDRectangleFlatButton:
            text: "Logout"
            pos_hint: {"center_x": 0.5}
            on_release: app.controller.go_to_welcome()


<RecipeScreen>:
    MDBoxLayout:
        orientation: "vertical"
        md_bg_color: 0.05, 0.07, 0.12, 1

        MDLabel:
            text: "Rezepte"
            halign: "center"
            font_style: "H4"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            size_hint_y: None
            height: self.texture_size[1] + dp(40)

        MDScrollView:
            bar_width: dp(8)
            effect_cls: "ScrollEffect"

            MDBoxLayout:
                id: recipe_list
                orientation: "vertical"
                spacing: dp(20)
                padding: dp(20)
                adaptive_height: True

        MDRectangleFlatButton:
            text: "Zur√ºck"
            pos_hint: {"center_x": 0.5}
            on_release: app.controller.go_to_welcome()
